# üåç Application Configuration
PORT=3000                        # Port on which the Express server runs
NODE_ENV=development             # Environment: development | production | test
APP_NAME=AuthService             # Application name
APP_ORIGIN=http://localhost:5173 # Frontend origin allowed by CORS
LOG_LEVEL=info                   # Log level: debug | info | warn | error

# üîê JWT Configuration
# All JWT keys must be Base64URL-encoded (not raw PEM).
# Example: convert PEM key to Base64URL before adding to .env
#     cat private.pem | base64 | tr '+/' '-_' | tr -d '='
JWT_PRIVATE_KEY=<base64url-encoded-private-key>
JWT_PUBLIC_KEY=<base64url-encoded-public-key>
JWT_EXPIRES_IN=15m               # Access token expiration time

JWT_REFRESH_PRIVATE_KEY=<base64url-encoded-refresh-private-key>
JWT_REFRESH_PUBLIC_KEY=<base64url-encoded-refresh-public-key>
JWT_REFRESH_EXPIRES_IN=30d       # Refresh token expiration time

# üîê Multi-Factor Authentication (MFA)
MFA_TOKEN_EXPIRES_IN=5m          # MFA code expiration time
MFA_TOKEN_SECRET_KEY=<random-32-char-secret>  # HMAC secret used for MFA token generation

# ‚úâÔ∏è Magic Link Authentication
MAGIC_LINK_TOKEN_EXPIRES_IN=15m
MAGIC_LINK_TOKEN_SECRET_KEY=<random-32-char-secret>

# üîè Cryptography & Security
CRYPTO_SYMMETRIC_KEY=<base64-encoded-32-byte-key> # Used for symmetric encryption (e.g. AES-256)
PASSWORD_SECRET_PEPPER=<random-string>            # Additional pepper for password hashing

# üóÑÔ∏è Database Configuration
DB_USERNAME=<username>
DB_PASSWORD=<password>
DB_URI=mongodb://localhost:27017/auth_service     # Full MongoDB connection string

# üåê Google OAuth2
GOOGLE_OAUTH_CLIENT_ID=<client-id>
GOOGLE_OAUTH_SECRET_KEY=<client-secret>
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback

# üåê GitHub OAuth2
GITHUB_OAUTH_CLIENT_ID=<client-id>
GITHUB_OAUTH_SECRET_KEY=<client-secret>
GITHUB_OAUTH_REDIRECT_URI=http://localhost:3000/api/v1/auth/github/callback

# üìß Email (Resend / SMTP)
RESEND_API_KEY=<resend-api-key>
MAILER_SENDER="Auth Service <noreply@example.com>"
