#############################################
# Server Configuration
#############################################

# The port your Node.js server will listen on
PORT=8000

# Environment in which the server is running.
# Options: "development", "production", "test"
NODE_ENV="development"

# Base API path for routing. Used to prefix all endpoints.
BASE_PATH="/accounts"

# Human-readable application name
APP_NAME="Login Sandbox"


#############################################
# Frontend / Client Settings
#############################################

# Hostname of the frontend application
FRONTEND_HOST="localhost"

# Full origin of your frontend ‚Äî used for CORS validation
FRONTEND_ORIGIN="http://localhost:3000"


#############################################
# Authentication & Security
#############################################

# JWT Issuer ‚Äî identifies your token‚Äôs "iss" field
AUTHENTICATION_TOKEN_ISSUER="api.loginsandbox.xyz"

# JWT Audience ‚Äî identifies your token‚Äôs "aud" field
AUTHENTICATION_TOKEN_AUDIENCE="api.loginsandbox.xyz"

# Logging level for your application.
# Options: "error", "warn", "info", "debug", "trace"
LOG_LEVEL="info"


#############################################
# üîê JWT Access Token Keys
# Use real RSA keys in production.
#############################################

# All JWT keys must be Base64URL-encoded (not raw PEM).
# Example: convert PEM key to Base64URL before adding to .env
#     cat private.pem | base64 | tr '+/' '-_' | tr -d '='

# RSA Private Key for signing access tokens (PEM format, Base64 encoded here)
JWT_PRIVATE_KEY="LS0tLS1CRUdJTiBSU0EgUFJJVkFURSBLRVktLS0tLQpNSUlK..."

# RSA Public Key for verifying access tokens (PEM format, Base64 encoded here)
JWT_PUBLIC_KEY="LS0tLS1CRUdJTiBQVUJMSUMgS0VZLS0tLS0KTUlJQ0lqQU5CZ..."

# Access token expiration time.
# Examples: "15m", "1h", "24h"
JWT_EXPIRES_IN="15m"


#############################################
# üîê JWT Refresh Token Keys
#############################################

# RSA Private Key for signing refresh tokens (PEM format, Base64 encoded here)
JWT_REFRESH_PRIVATE_KEY="LS0tLS1CRUdJTiBSU0EgUFJJVkFURSBLRVktLS0tLQpNSU..."

# RSA Public Key for verifying refresh tokens (PEM format, Base64 encoded here)
JWT_REFRESH_PUBLIC_KEY="LS0tLS1CRUdJTiBQVUJMSUMgS0VZLS0tLS0KTUlJQ0lq..."

# Refresh token expiration time.
JWT_REFRESH_EXPIRES_IN="30d"


#############################################
# üîê Multi-Factor Authentication (MFA)
#############################################

# MFA token expiration time
MFA_TOKEN_EXPIRES_IN="5m"

# Secret key for signing/verifying MFA tokens
MFA_TOKEN_SECRET_KEY=<random-32-char-secret>  # HMAC secret used for MFA token generation


#############################################
# ‚úâÔ∏è Magic Link Authentication
#############################################

# Magic link token expiration time
MAGIC_LINK_TOKEN_EXPIRES_IN="5m"

# Secret key for signing/verifying magic link tokens
MAGIC_LINK_TOKEN_SECRET_KEY=<random-32-char-secret>  # HMAC secret used for MFA token generation


#############################################
# üîè Encryption & Passwords
#############################################

# Symmetric key for general cryptographic operations
CRYPTO_SYMMETRIC_KEY=<base64-encoded-32-byte-key> # Used for symmetric encryption (e.g. AES-256)

# Secret pepper added to user passwords before hashing
PASSWORD_SECRET_PEPPER=<random-string>            # Additional pepper for password hashing


#############################################
# üóÑÔ∏è Database Configuration
#############################################

# Database username
DB_USERNAME=<username>

# Database password
DB_PASSWORD=<password>

# MongoDB connection URI
DB_URI=mongodb://localhost:27017/auth_service     # Full MongoDB connection string


#############################################
# üåê OAuth Configuration
#############################################

# üåê Google OAuth2
GOOGLE_OAUTH_CLIENT_ID=<client-id>
GOOGLE_OAUTH_SECRET_KEY=<client-secret>
GOOGLE_OAUTH_REDIRECT_URI="http://localhost:3000/accounts/callback/google"

# üåê GitHub OAuth2
GITHUB_OAUTH_CLIENT_ID=<client-id>
GITHUB_OAUTH_SECRET_KEY=<client-secret>
GITHUB_OAUTH_REDIRECT_URI="http://localhost:3000/accounts/callback/github"


#############################################
# üìß Email (Resend / SMTP) / Resend API Configuration
#############################################

# Resend API key for sending emails
RESEND_API_KEY=<resend-api-key>

# Default "from" email address for outgoing emails
MAILER_SENDER="mail@notifications.loginsandbox.xyz"
