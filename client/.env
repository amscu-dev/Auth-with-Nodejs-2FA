#############################################
# Client-Side Environment Variables
# These variables are exposed to the browser.
#############################################

# Base URL of your backend API.
# Used by the frontend to make API requests.
NEXT_PUBLIC_API_BASE_URL="http://localhost:8000/accounts"

# Path to redirect users after a successful login.
NEXT_PUBLIC_LOGIN_REDIRECT="/home/dashboard"

# Path to redirect users after a failed login attempt.
NEXT_PUBLIC_FAILED_LOGIN_REDIRECT="/accounts/signin"

# Path to redirect users after logout.
NEXT_PUBLIC_LOGOUT_REDIRECT="/accounts/signin"

#############################################
# JWT Configuration
#############################################

# JWT Issuer — identifies the token's "iss" field.
# Should match the backend JWT issuer.
JWT_TOKEN_ISSUER="api.loginsandbox.xyz"

# JWT Audience — identifies the token's "aud" field.
# Should match the backend JWT audience.
JWT_TOKEN_AUDIENCE="api.loginsandbox.xyz"

# Public key used by the frontend to verify JWT access tokens.
# Must match the backend's JWT public key.
# Use PEM format.
JWT_ACCESS_TOKEN_PUBLIC_KEY="-----BEGIN RSA PRIVATE KEY----- <YOUR_RSA_PRIVATE_KEY_HERE> -----END RSA PRIVATE KEY-----"
